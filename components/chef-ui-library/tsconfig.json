{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "ES2022"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES2022",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": [
      "jest"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src",
    "types/jsx.d.ts",
    "chef-markdown.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
